<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |c| %>
  <div class='form-group'>
    <%= c.label :author %>
    <%= c.text_field :author %>
  </div>
  <div class='form-group'>
    <%= c.label :rating %>
    <%= c.text_field :rating %>
  </div>
  <div class='form-group'>
    <%= c.label :body %>
    <%= c.text_field :body %>
  </div>
  <%= c.submit %>
<% end %>
