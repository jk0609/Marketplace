

<div class='row'>
  <div class='col-md-6'>
    <h3>All Products - <%=@products.length%> of <%=Product.all.length%> products</h3>
    <% @products.each do |product| %>
      <div class='productListing'>
        <h4><%= link_to product.name, product_path(product) %></h4>
        <p>$<%= '%.2f' % product.cost %></p>
        <p><strong>Origin Country:</strong> <%=product.country%></p>
      </div>
    <% end %>
  </div>
  <div class='col-md-6'>
    <h3>Local Products - <%=@products.local.length%> of <%=Product.all.length%> products</h3>
    <% @products.local.each do |product| %>
      <div class='productListing'>
        <h4><%= link_to product.name, product_path(product) %></h4>
        <p>$<%= '%.2f' % product.cost %></p>
        <p><strong>Origin Country:</strong> <%=product.country%></p>
      </div>
    <% end %>
  </div>
</div>




