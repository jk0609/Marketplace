<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |c| %>
  <div class='form-group'>
    <%= c.label :name %>
    <%= c.text_field :name %>
  </div>
  <div class='form-group'>
    <%= c.label :cost %>
    <%= c.text_field :cost %>
  </div>
  <div class='form-group'>
    <%= c.label :country %>
    <%= c.text_field :country %>
  </div>
  <%= c.submit %>
<% end %>
