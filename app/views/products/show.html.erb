<h1><%=@product.name%></h1>

<h3>$<%='%.2f' % @product.cost%></h3>
<h3><strong>Origin Country:</strong> <%=@product.country%></h3>
<h3>Average Rating: <%=@product.average_review%>/5</h3>
<hr>
<h3>Reviews - <%=@reviews.length%> of <%=@product.reviews.length%> reviews</h3>
<% @reviews.each do |review| %>
  <div class='reviewListing'>
    <% counter = 0 %>
    <% 5.times do %>
      <% if counter < review.rating %>
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
      <% else %>
        <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <% end %>
      <% counter += 1 %>
    <% end %>
    <p class='review-body'><span><%=review.body%></span></p>
    <p><%=review.author%></p>
    <%= link_to "Delete", product_review_path(@product, review), :data => {:confirm => "You sure?", :method => "delete"}%>
  </div>
<% end %>
<button><%= link_to "Add Review", new_product_review_path(@product) %></button>
<br><br>
<button><%= link_to "Update Product Info", edit_product_path(@product) %></button>
<br>
<button><%= link_to "Delete This Product", product_path(@product), :data => {:confirm => "You sure?", :method => "delete"}%></button>
